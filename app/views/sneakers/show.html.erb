<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        スニーカー詳細
      </h1>
    </div>
  </div>
</section>

<div class='sneaker-img-content'>
  <%= image_tag @sneaker.image, class: "sneaker-img" %>
</div>

<div class="card-content">
  <div class="media">
    <div class="media-content">
      <p class="title is-4"><%= @sneaker.title %></p>
    </div>
  </div>
  <div class="content">
    <table class="table is-narrow">
      <tr>
        <th>説明</th>
      </tr>
      <tr>
        <td><%= simple_format @sneaker.detail %></td>
      </tr>
    </table>
    <% if @sneaker.user.id == current_user.id %>
      <%= link_to "編集画面へ", edit_sneaker_path(@sneaker), class: "button is-success" %>
      <p class="or-text">or</p>
      <%= link_to "削除", sneaker_path(@sneaker), method: :delete, class:"sneaker-destroy" %>
    <% end %>
  </div>
</div>

